# handle base options
PRG ?=gwion
CC ?=gcc
YACC ?=yacc
LEX ?=flex
PREFIX ?=/usr/local
SOUNDPIPE_LIB ?=-lsoundpipe
SOUNDPIPE_INC ?=
LDFLAGS += -lm -ldl -rdynamic -lpthread
CFLAGS += -Iinclude -std=c99 -O3 -mfpmath=sse -mtune=native -fno-strict-aliasing -Wall -D_GNU_SOURCE

# handle boolean options
USE_DOUBLE    = 0
USE_COVERAGE ?= 0
USE_GWCOV    ?= 0
USE_MEMCHECK ?= 0
USE_GWCGRAPH ?= 0
USE_GWREPL   ?= 0
USE_GWUDP    ?= 0
USE_GWMPOOL  ?= 1

# handle definitions
D_FUNC       ?= dummy_driver

# base plugin directories
GWPLUG_DIR   ?= $(shell echo ~/.gwplug)

# handle libraries
DUMMY_D      ?= 1
SILENT_D     ?= 0
SPA_D        ?= 0
SNDFILE_D    ?= 1
ALSA_D       ?= 0
JACK_D       ?= 0
PORTAUDIO_D  ?= 0
SOUNDIO_D    ?= 0
PULSE_D      ?= 0
PLOT_D       ?= 0

DEBUG_STACK  ?= 0
